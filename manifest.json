{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "browser_action": {
    "default_icon": "",
    "default_popup": "index.html"
   },
  "content_scripts": [
    {
      "js": ["./main.js"]
    }
  ],
  "background": {
    "service_worker": "main.js"
  },
  "permissions": [
    "activeTab",
    "storage"
    ]
}