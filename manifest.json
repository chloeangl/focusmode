{
    "manifest_version": 2,
    "name": "Focus Mode",
    "version": "1",
    "description": "Helps increase focus duration",
    "content_scripts": [
        {
            "matches": [
                "https://*/*", "http://*/*", "<all_urls>"

                
            ],
            "js": [
                "./main.js"
            ],
            "css": ["./style.css"]
        }
    ],
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "./main.js"
        ]
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "https://*/*",
         "http://*/*"
    ]
}
   